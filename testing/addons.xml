<addons>
<addon id="plugin.video.tvtime.private" name="TV Time" provider-name="redacted" version="1.4.6">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="script.module.urlresolver" version="3.0.0"/>
        <import addon="script.module.requests" version="2.12.4" />
        <import addon="script.ftvguide.custom" version="0.2.0" optional="true" />
        <import addon="script.module.tvtime.common" version="1.0.0"/>
    </requires>
    <extension library="main.py" point="xbmc.python.pluginsource">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Watch Major American Television Networks Live for Free!</summary>
        <description>Watch all the best American television channels live and in high quality, completely unrestricted and free of charge! Also watch a ton of live TV from various sources as well as movies on demand!</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="script.ftvguide.custom" name="TV Time Guide" version="0.3.1" provider-name="redacted">
	<requires>
		<import addon="xbmc.python" version="2.19.0"/>
		<import addon="script.module.simplejson" version="3.3.0"/>
	        <import addon="plugin.video.tvtime.private" version="0.7.5" />
	</requires>
	<extension point="xbmc.python.script" library="addon.py">
            <provides>executable video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="login"/>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">TV Guide for TV Time Private!</summary>
	
		<description lang="en">TV Guide for TV Time Private!</description>
		<description lang="en_US">TV Guide for TV Time Private!</description>
	
		<disclaimer lang="en">TV Time Guide is based on the original TV Guide addon by twinther which was later developed into the FTV Guide. This is a simplified version geared specifically for those who have access to TV Time Private.</disclaimer>
		<language></language>
		<platform>all</platform>
		<license>GPLv2</license>
        <website></website>
		<email></email>
	</extension>
</addon>

<addon id="script.module.tvtime.common" name="TV Time Common Libraries" version="1.0.0" provider-name="redacted">
	<requires>
		<import addon="xbmc.python" version="2.1.0" />
	</requires>
	<extension point="xbmc.python.module" library="lib" />
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">Collection of modules used by TV Time</summary>
		<description lang="en">Collection of modules used by TV Time</description>
		<license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
	</extension>
</addon>

